<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_turret"
            android:tag="2"
            android:tint="#FBC02D"
            android:layout_marginBottom="16dp"
            android:id="@+id/promote_turret"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bishop"
            android:tag="3"
            android:tint="#FBC02D"
            android:layout_marginBottom="16dp"
            android:id="@+id/promote_bishop"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_knight"
            android:tag="4"
            android:tint="#FBC02D"
            android:layout_marginBottom="16dp"
            android:id="@+id/promote_knight"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_queen"
            android:tag="5"
            android:tint="#FBC02D"
            android:id="@+id/promote_queen"/>

</LinearLayout>